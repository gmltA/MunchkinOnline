@using Munchkin_Online.Core.Auth;
@model Munchkin_Online.Core.Game.Match

@{
    ViewBag.Title = "Create";
    ViewBag.pageID = Munchkin_Online.Core.PageID.PAGE_LOBBY;
}

<h2>Private lobby #@Model.Id</h2>
<table class="lobby-players">
    <tbody>
        <tr>
            <td>
                <div class="player creator">
                    <p>@Model.Players[0].ToUser().Nickname <i>Lobby creator</i></p>
                </div>
            </td>
            <td>
                @if (Model.Players.Count > 1)
                {
                    <div class="player" data-id="@Model.Players[1].UserId">
                        <p>@Model.Players[1].ToUser().Nickname</p>
                    </div>
                }
                else
                {
                    <div class="player none">
                        <p>Add opponent</p>
                    </div>
                }
            </td>
        </tr>
        <tr>
            <td>
                @if (Model.Players.Count > 2)
                {
                    <div class="player" data-id="@Model.Players[2].UserId">
                        <p>@Model.Players[2].ToUser().Nickname</p>
                    </div>
                }
                else
                {
                    <div class="player none">
                        <p>Add opponent</p>
                    </div>
                }
            </td>
            <td>
                @if (Model.Players.Count > 3)
                {
                    <div class="player" data-id="@Model.Players[3].UserId">
                        <p>@Model.Players[3].ToUser().Nickname</p>
                    </div>
                }
                else
                {
                    <div class="player none">
                        <p>Add opponent</p>
                    </div>
                }
            </td>
         </tr>
    </tbody>
</table>

<div class="lobby-control-container">
    <a href="/lobby/leave" class="button">Leave lobby</a>
    @if (Model.Players.Count < 4)
    {
        <div class="button disabled">Start game</div>
    }
    else
    {
        <a href="/lobby/start" class="button">Start game</a>
    }
</div>

@Scripts.Render("~/js/Lobby")