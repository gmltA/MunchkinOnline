@using Munchkin_Online.Models;
@model List<Munchkin_Online.Models.User>

<div class="menu" hidden>
    @if ((bool)ViewData["ForCreator"])
        {
        if ((bool)ViewData["EmptySlot"])
        {
            if (Model.Count != 0)
            {
                foreach (User friend in Model)
                {
                    <p data-id="@friend.Id">@friend.Nickname</p>
                }
            }
            else
            {
                <p>No friends</p>
                <p>Cry</p>
            }
        }
        else
        {
            <p class="button-kick">Kick</p>
        }
    }
</div>